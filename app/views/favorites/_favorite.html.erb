<div class="favorite">
  <% if current_user.favorited?(post.id) %>
    Favorited
    <%= link_to favorites_path(post), method: :delete, class: 'btn btn-danger' do %>
      <i class="glyphicon glyphicon-star-empty"></i>&nbsp; Unfavorite
    <% end %>
  <% else %>
    Want to favorite this?
    <%= link_to favorites_path(post), method: :post, class: 'btn btn-primary' do %>
      <i class="glyphicon glyphicon-star"></i>&nbsp; Favorite
    <% end %>
  <% end %>
</div>